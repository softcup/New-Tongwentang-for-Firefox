{
  "description": "__MSG_extDescription__",
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "1.5",
  "homepage_url": "https://github.com/softcup/New-Tongwentang-for-Firefox",
  "icons": {
    "16": "icon/tongwen-icon-16.png",
    "32": "icon/tongwen-icon-32.png",
    "48": "icon/tongwen-icon-48.png",
    "128": "icon/tongwen-icon-128.png"
  },
  "applications": {
    "gecko": {
      "id": "tongwen@softcup",
      "strict_min_version": "50.0"
    }
  },
  "author": "Ett Chung",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "file:///*"
      ],
      "js": [
        "tongwen.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_title": "__MSG_extTitle__",
    "default_icon": "icon/tongwen-icon-32.png"
  },

  "commands": {
    "page-trad": {
      "description": "__MSG_contextPage2Trad__",
      "suggested_key": {
        "default": "Alt+Shift+T"
      }
    },
    "page-simp": {
      "description": "__MSG_contextPage2Simp__",
      "suggested_key": {
        "default": "Alt+Shift+S"
      }
    },
    "clip-trad": {
      "description": "__MSG_contextClip2Trad__",
      "suggested_key": {
        "default": "Alt+Shift+K"
      }
    },
    "clip-simp": {
      "description": "__MSG_contextClip2Simp__",
      "suggested_key": {
        "default": "Alt+Shift+L"
      }
    }
  },
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs",
    "contextMenus",
    "clipboardRead",
    "clipboardWrite",
    "downloads"
  ],
  "default_locale": "en",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
